<h1>New Game</h1>
<p>Find me in app/views/games/score.html.erb</p>
<%= @letters %>
<form action="/score" method="post">
<label for="try">What's the longest word you can find?</label>
<input type="text" name="try">
<input type="submit" value="Play">
<input id="letters" name="letters" value="<%= @letters.join %>" type="hidden" />
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
